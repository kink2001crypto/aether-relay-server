{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "extension-src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": false
	},
	"include": [
		"extension-src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"mobile-app",
		"relay-server",
		"out"
	]
}